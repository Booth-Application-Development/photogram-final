<h1>List of users</h1>

<table border="1">
  <tbody>
    <tr>
      <th>
        Username
      </th>
      <th>
        Private?
      </th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>  
        <td>
          <%= user.username %>
        </td>

        <td>
          <%= user.private ? "Yes" : "No" %>
        </td>

        <td></td>
        <td>
          <a href="/users/<%= user.id%>">Show details</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
