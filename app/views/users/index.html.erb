<h1>List of users</h1>

<table border="1">
  <tbody>
    <tr>
      <th>
        Username
      </th>
      <th>
        Private?
      </th>
      <% if session[:user_id].present?%>
      <th></th>
        <% end %>
      
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>  
        <td>
          <%= user.username %>
        </td>

        <td>
          <%= user.private ? "Yes" : "No" %>
        </td>

        <% if session[:user_id].present?%>
          <td><form action="/insert_follow_request" method="post">
              <input type="hidden" name="query_recipient_id" value="117">

              <button>
                Follow
              </button>
            </form>
           </td>
        <% end %>

        <td>
          <a href="/users/<%= user.id%>">Show details</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
